@model Employee;

@{
    var photoPath = $"/images/avatars/{Model.PhotoPath ?? "noimage.png"}";
    bool shoeButtons = (bool)ViewData["ShowButtons"];
}

<div class="card-deck">
    <div class="card m-3 cardBoxShadow">
        <div class="card-header text-center cardHeaderStyle">
            <h3>@Model.Name</h3>
        </div>

        <div class="text-center card-body">
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
        </div>

        @if (shoeButtons)
        { 
            <div class="card-footer text-center">
                <a asp-page="/Employees/EmployeeDetails" asp-route-id="@Model.Id" class="btn btn-success m-1 buttonShadow">Details</a>
                <a asp-page="/Employees/EditEmployee" asp-route-id="@Model.Id" class="btn btn-primary m-1 buttonShadow">Edit</a>
                <a asp-page="/Employees/DeleteEmployee" asp-route-id="@Model.Id" class="btn btn-danger m-1 buttonShadow">Delete</a>
            </div>
        }
        
    </div>
</div>
    
