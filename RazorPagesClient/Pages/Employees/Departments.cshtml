@page
@model RazorPagesClient.Pages.Employees.DepartmentsModel
@{
    ViewData["Title"] = "Departments";
}

<h3 class="text-center mb-3">Departments</h3>

<div class="container">
    <form method="get" class="mb-3">
        <div class="form-group row justify-content-center m-3">
            <div class="col col-lg-8">
                <select asp-for="Employee.Department" class="custom-select mr-2" asp-items="Html.GetEnumSelectList<Department>()">
                    <option value="All">All</option>
                </select>
            </div>
        </div>
        <div class="form-group row justify-content-center m-3">
            <div class="col col-lg-8">
                <span class="rightAlignButton">
                    <button type="submit" class="btn btn-success buttonShadow">Filter</button>
                </span>                
            </div>       
        </div>
    </form>

    <div class="row justify-content-center m-3">
        <div class="col col-lg-8">
            @if (Model.Employee.Department == null)
            {
                <vc:head-count department="@null"></vc:head-count>
            }
            else
            {
                <vc:head-count department="@Model.Employee.Department"></vc:head-count>
            }            
        </div>
    </div>   
</div>


