@page
@model RazorPagesClient.Pages.Employees.EmployeesModel
@{
    ViewData["Title"] = "Employees";
}
<h2>Employees</h2>

<div class="row">
    @foreach (var item in Model.Employees)
    {
        var photoPath = $"/images/{item.PhotoPath ?? "noimage.png"}";

        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card-deck">
                <div class="card m-3 cardBoxShadow">
                    <div class="card-header text-center cardHeaderStyle">
                        <h3>@item.Name</h3>
                    </div>

                    <div class="text-center card-body">
                        <img class="card-img-top imageThmbnail" src="@photoPath" asp-append-version="true"/>                        
                    </div>

                    <div class="card-footer text-center">
                        <a asp-page="/Employees/EmployeeDetails" asp-route-ID="@item.Id" class="btn btn-success m-1 buttonShadow">Details</a>
                        <a href="#" class="btn btn-primary m-1 buttonShadow">Edit</a>
                        <a href="#" class="btn btn-danger m-1 buttonShadow">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>